@model MVC2AT.Dominio.Model.Entity.CidadeEntity

@{
    ViewData["Title"] = "Create";
}

<h1>Create</h1>

<hr />
<form asp-action="Create" class="col-md-12">
    <div class="row justify-content-around">
        <div class="col-md-5">
            <h4>Cidade</h4>
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Nome" class="control-label"></label>
                <input asp-for="Nome" class="form-control" />
                <span asp-validation-for="Nome" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="População" class="control-label"></label>
                <input asp-for="População" class="form-control" />
                <span asp-validation-for="População" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="NomeEstado" class="control-label"></label>
                <input asp-for="NomeEstado" class="form-control" />
                <span asp-validation-for="NomeEstado" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Estado" class="control-label"></label>
                <select asp-for="EstadoEntityId"
                        asp-items="Model.Estados"
                        class="form-control">
                    <option value="">Selecione um estado</option>
                </select>
                <span asp-validation-for="Estado" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>

            <div>
                <a asp-action="Index">Back to List</a>
            </div>
        </div>
    </div>
</form>


@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}